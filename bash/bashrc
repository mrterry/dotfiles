export EDITOR=vim
export TEXMFLOCAL="$HOME/doc/latex_files/texmf"

if [ -n "${SYS_TYPE}" ] ; then
    if [ $SYS_TYPE == "macos" ] ; then
        export CLICOLOR=1
        alias grep="grep --color"
    else
        # needs GNU ls
        DIR=`dirname $BASH_SOURCE`
        eval `dircolors $DIR/dircolors.ansi-dark`
        alias ls="ls --color=tty"
        alias grep="grep --color"
    fi
fi

source $HOME/doc/dotfiles/bash/git-completion.bash
source $HOME/doc/dotfiles/bash/pip-completion.bash
PS1='\h:\W$(__git_ps1 "(%s)") \u\$ '
